{
    "name": "peanutgraphic/peanut-connect",
    "description": "WordPress connector plugin for Peanut Monitor",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Peanut Graphic",
            "homepage": "https://peanutgraphic.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "classmap": [
            "includes/"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html tests/coverage",
        "phpcs": "phpcs --standard=WordPress includes/ peanut-connect.php",
        "phpcbf": "phpcbf --standard=WordPress includes/ peanut-connect.php"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
